<?xml version="1.0"?>
<odoo>
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">Partner form project</field>
        <field name="model">res.partner</field>
        <field eval="20" name="priority"/>
        <field name="inherit_id" ref="project.view_task_partner_info_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button class="oe_stat_button" type="action" name="%(project.open_view_project_all)d" 
                        context="{'search_default_partner_id': active_id, 'default_partner_id': active_id}"
                        icon="fa-sitemap">
                    <field string="Projects" name="project_count" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>
</odoo>
