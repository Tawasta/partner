	<data>

		<!-- Extend partner form view -->
        <record id="view_partner_form_inherited" model="ir.ui.view">
            <field name="name">view.partner.form.inherited</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
            	<field name="title" position="after">
            		<field name="business_segment"
                           domain="[('parent', '=', False)]"
                           attrs="{'invisible': [('is_company','=',False)]}"
                    />
                    <field name="business_segment_subsegment"
                           attrs="{'invisible': [('is_company','=',False)]}"
                    />
                    <!--<field name="business_size" widget="selection" attrs="{'invisible': [('is_company','=',False)]}"/>-->
            	</field>
            </field>
        </record>

