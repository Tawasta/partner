        <!-- Open tree-view -->
        <record id="business_segment_tree_act" model="ir.actions.act_window">
            <field name="name">Business Segments</field>
            <field name="res_model">business_segment.segment</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menuitem for business segments -->
