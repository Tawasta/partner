<?xml version="1.0"?>
<odoo>
    <record id="partner_breakdown_form" model="ir.ui.view">
        <field name="name">Partner breakdown form project</field>
        <field name="model">res.partner.breakdown</field>
        <field name="inherit_id" ref="partner_breakdown.partner_breakdown_form"/>
        <field name="arch" type="xml">

            <notebook position="inside">
                <page name="tasks" string="Tasks">
                    <field name="project_ids"
                           readonly="1"
                           attrs="{'invisible': [('project_ids', '=', [])]}"
                    />
                    <field name="task_ids"
                           readonly="1"
                           attrs="{'invisible': [('task_ids', '=', [])]}"
                    />
                </page>
            </notebook>

        </field>
    </record>

</odoo>
