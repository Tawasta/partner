<?xml version="1.0"?>
<odoo>
    <record id="partner_breakdown_form" model="ir.ui.view">
        <field name="name">Partner breakdown form project</field>
        <field name="model">res.partner.breakdown</field>
        <field name="inherit_id" ref="partner_breakdown.partner_breakdown_form"/>
        <field name="arch" type="xml">

            <notebook position="inside">
                <page name="projects" string="Projects">
                    <field name="project_ids"
                           readonly="1"
                           mode="kanban"
                           attrs="{'invisible': [('project_ids', '=', [])]}"
                    />
                    <p attrs="{'invisible': [('project_ids', '!=', [])]}">
                        No projects
                    </p>

                    <label for="task_ids" string="Tasks" />
                    <field name="task_ids"
                           readonly="1"
                           attrs="{'invisible': [('task_ids', '=', [])]}"
                    />
                    <p attrs="{'invisible': [('task_ids', '!=', [])]}">
                        No tasks
                    </p>
                </page>
            </notebook>

        </field>
    </record>

</odoo>
