<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="res_partner_multicompany">
		    <field name="name">res.partner.form.multicompany</field>
		    <field name="model">res.partner</field>
		    <field name="inherit_id" ref="base.view_partner_form" />
		    <field name="arch" type="xml">
				<xpath expr="//notebook/page/group/group[1]/field[@name='company_id']" position="replace">
					<field name="customer_of" colspan="2" help="Which companies does the customer belong to" widget="many2many_tags" />
					<field name="supplier_of" colspan="2" help="Which companies does the supplier belong to" widget="many2many_tags" />
				</xpath>
		    </field>
		</record>
	</data>
</openerp>