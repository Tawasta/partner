<?xml version="1.0"?>
<odoo>
    <record id="partner_breakdown_form" model="ir.ui.view">
        <field name="name">Partner breakdown form locations</field>
        <field name="model">res.partner.breakdown</field>
        <field name="inherit_id" ref="partner_breakdown.partner_breakdown_form"/>
        <field name="arch" type="xml">

            <notebook position="inside">
                <page name="locations" string="Locations">
                    <group name="locations">
                        <field name="location_ids"
                               readonly="1"
                               attrs="{'invisible': [('location_ids', '=', [])]}"
                               widget="many2many_tags"
                        />
                    </group>
                    <p attrs="{'invisible': [('location_ids', '!=', [])]}">
                        No locations
                    </p>

                    <label for="quant_ids" string="Quantity in locations"/>
                    <field name="quant_ids"
                           readonly="1"
                           attrs="{'invisible': [('quant_ids', '=', [])]}"
                    />
                    <p attrs="{'invisible': [('location_ids', '!=', [])]}">
                        No products in locations
                    </p>
                </page>
            </notebook>

        </field>
    </record>

</odoo>
