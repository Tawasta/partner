<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

		<!--  Tree view -->
		<record id="res_partner_note_tree" model="ir.ui.view">
		    <field name="name">Partner Note Tree</field>
		    <field name="model">res.partner.note</field>
		    <field name="type">tree</field>
		    <field name="arch" type="xml" >
		    	<tree string="Internal notes">
		            <field name="create_date" widget='date'/>
		            <field name="name" />
		            <field name="note" />
		            <field name="create_uid"/>
		        </tree>
		    </field>
		</record>
		
		<!--  Form view -->
		<record model="ir.ui.view" id="res_partner_note_form">
		    <field name="name">Partner Note Form</field>
		    <field name="model">res.partner.note</field>
		    <field name="type">form</field>
		    <field name="arch" type="xml">
		    	<form string="Internal notes">
			    	<sheet>
				    	<group>
				            <field name="create_uid" readonly='1' attrs="{'invisible': [('create_uid','=',False)]}" />
				            <field name="create_date" readonly='1' attrs="{'invisible': [('create_uid','=',False)]}" />
				            <field name="name" />
				            <field name="note" />
			            </group>
			        </sheet>
			    </form>
		    </field>
		</record>
	
	</data>
</openerp>