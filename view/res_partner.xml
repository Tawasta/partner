<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="res_partner_contact_roles">
            <field name="name">res.partner.form.contact_roles</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">

                <field name="category_id" position="after">
                    <field name='company_roles' widget="many2many_tags" attrs="{'invisible':[('is_company','!=',True)]}" placeholder='Company roles'/>
                </field>

                <field name="category_id" position="after">
                    <field name="contact_roles" widget="many2many_tags" attrs="{'invisible':[('is_company','=',True)]}" placeholder='Contact roles'/>
                </field>

            </field>
        </record>
    </data>
</openerp>

