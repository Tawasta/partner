<?xml version="1.0"?>
<odoo>
    <record id="partner_breakdown_form" model="ir.ui.view">
        <field name="name">Partner breakdown form timesheets</field>
        <field name="model">res.partner.breakdown</field>
        <field name="inherit_id" ref="partner_breakdown.partner_breakdown_form"/>
        <field name="arch" type="xml">

            <notebook position="inside">
                <page name="timesheets" string="Timesheets">
                    <field name="timesheet_ids"
                           readonly="1"
                           attrs="{'invisible': [('timesheet_ids', '=', [])]}"
                           context="{
                           'tree_view_ref': 'hr_timesheet.hr_timesheet_line_tree',
                           }"
                    />

                    <p attrs="{'invisible': [('timesheet_ids', '!=', [])]}">
                        No timesheets
                    </p>
                </page>
            </notebook>

        </field>
    </record>

</odoo>
