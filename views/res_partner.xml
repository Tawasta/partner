<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="res_partner_multicompany">
		    <field name="name">res.partner.form.multicompany</field>
		    <field name="model">res.partner</field>
		    <field name="inherit_id" ref="base.view_partner_form" />
		    <field name="arch" type="xml">

				<xpath expr="//notebook/page/group/group[1]/field[@name='company_id']" position="replace" />
				<xpath expr="//notebook/page[contains(@string, 'Sale')]" position="inside">
				    <group>
						<field name="customer_of" help="Which companies does the customer belong to" widget="many2many_tags" />
						<field name="supplier_of" help="Which companies does the supplier belong to" widget="many2many_tags" />
					</group>
				</xpath>
		    </field>
		</record>
	</data>
</openerp>