<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_reference_right_tree" model="ir.ui.view">
            <field name="name">Reference rights tree</field>
            <field name="model">res.partner.reference_right</field>
            <field name="arch" type="xml">
                <tree string="Reference rights">
                    <field name="company_id"/>
                    <field name="code"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="action_partner_reference_rights" model="ir.actions.act_window">
            <field name="name">Reference rights</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner.reference_right</field>
            <field name="view_type">form</field>
            <field name="help">Click to create a new reference right</field>
        </record>

        <menuitem action="action_partner_reference_rights" id="menu_reference_rights" parent="contacts.menu_contacts" sequence="50"/>

    </data>
</odoo>
