<?xml version="1.0"?>
<odoo>
    <record id="open_partner_breakdown" model="ir.actions.act_window">
        <field name="name">Partner breakdown</field>
        <field name="res_model">res.partner.breakdown</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="view_id" eval="False"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add a new breakdown
            </p>
            <p>
                Partner breakdowns can help you to get a quick overview about
                your customers, vendors or other partners.
            </p>
        </field>
    </record>

    <menuitem
        id="menu_open_partner_breakdown"
        action="open_partner_breakdown"
        parent="sales_team.menu_sales"
        sequence="3"/>
</odoo>
